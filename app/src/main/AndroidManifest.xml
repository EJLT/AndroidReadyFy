<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.svalero.readyfy">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReadyFy"
        tools:targetApi="31">

        <activity
            android:name=".Activities.BookAddActivity"
            android:exported="true"
            android:label="Add Book"
            android:theme="@style/Theme.ReadyFy" />

        <activity
            android:name=".Activities.BookUpdateActivity"
            android:exported="true"
            android:label="Update Book"
            android:theme="@style/Theme.ReadyFy" />

        <activity
            android:name=".Activities.BookDeleteActivity"
            android:exported="true"
            android:label="Delete Book"
            android:theme="@style/Theme.ReadyFy" />

        <activity
            android:name=".Activities.BookListActivity"
            android:exported="true"
            android:label="List Books"
            android:theme="@style/Theme.ReadyFy" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ReadyFy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
